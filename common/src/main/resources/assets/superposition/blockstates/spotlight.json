{
  "multipart": [
    {
      "when": {
        "facing": "north"
      },
      "apply": {
        "model": "superposition:block/spotlight"
      }
    },
    {
      "when": {
        "facing": "south"
      },
      "apply": {
        "model": "superposition:block/spotlight",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "west"
      },
      "apply": {
        "model": "superposition:block/spotlight",
        "y": 270
      }
    },
    {
      "when": {
        "facing": "east"
      },
      "apply": {
        "model": "superposition:block/spotlight",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "up"
      },
      "apply": {
        "model": "superposition:block/spotlight_bottom"
      }
    },
    {
      "when": {
        "facing": "down"
      },
      "apply": {
        "model": "superposition:block/spotlight_top"
      }
    }
  ]
}